{
  "manifest_version": 3,
  "name": "AI Email Assistant",
  "version": "1.0.0",
  "description": "AI Powered email reply Assistant and generator",
  "permissions":["activeTab","storage"],
  "host_permissions":[
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],

   "content_scripts": [
    {
      "js": ["content.js" ],  "matches": [ "*://mail.google.com/*"] , "css":["content.css"]
      , "run_at":"document_end"
    }
  ],

   "web_accessible_resources": [
    {
      "resources": [ "icon/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ],

  "action": {
  
    "default_title": "AI Powered email reply Assistant and generator"
   
  }
}